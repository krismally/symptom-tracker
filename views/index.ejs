<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Symptom Log</title>
    <%- include("./partials/head.ejs") %>
</head>
<body>
    <%- include("./partials/nav.ejs") %>
    <main class="log container">
        <h1>My Logs</h1>
        <div class="row row-cols-1 row-cols-md-4 g-4">
        <% if (logs.length > 0) { %>
        <% logs.sort((a, b) => { return a.date - b.date }) %>
        <% logs.forEach(log => { %>
            <div class="col">
                <section class="card">
                    <a href="/symptomTracker/<%= log._id %>" class="card-title"><h2 class="log-date "><%=log.date.toLocaleDateString("en-US", { month: "short", day: "2-digit" })%></h2></a>
                </section>
            </div>
        <%   }) %>
        <%   }  else { %>
            <div class="col">
                <section class="new-log card">
                    <a href="/symptomTracker/new" class="add-log card-title">No logs yet this month...add one now!</h2>
                </section>
            </div>
         <%   } %>
        </div>
    </main>
</body>
</html>